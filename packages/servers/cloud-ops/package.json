{
  "name": "@mcp-demo/cloud-ops-server",
  "version": "1.0.0",
  "description": "MCP Cloud Operations Server - infrastructure monitoring and management",
  "main": "dist/index.js",
  "bin": {
    "cloud-ops-server": "dist/index.js"
  },
  "type": "module",
  "scripts": {
    "build": "tsc",
    "start": "node dist/index.js",
    "start:http": "node dist/index.js --transport=http --port=3003",
    "dev": "tsx watch src/index.ts",
    "dev:http": "tsx watch src/index.ts --transport=http --port=3003",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.18.1",
    "@mcp-demo/core": "workspace:*",
    "zod": "^3.23.8",
    "node-cron": "^3.0.3",
    "express": "^4.19.2",
    "cors": "^2.8.5"
  },
  "devDependencies": {
    "@types/node-cron": "^3.0.11",
    "@types/express": "^4.17.21",
    "@types/cors": "^2.8.17",
    "@mcp-demo/test-utils": "workspace:*",
    "@vitest/coverage-v8": "^3.2.4",
    "tsx": "^4.16.5",
    "typescript": "^5.5.4",
    "vitest": "^3.2.4"
  }
}