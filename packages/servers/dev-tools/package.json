{
  "name": "@mcp-demo/dev-tools-server",
  "version": "1.0.0",
  "description": "MCP server for development tools (formatting, linting, testing, etc.)",
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "bin": {
    "mcp-dev-tools": "./dist/index.js"
  },
  "scripts": {
    "build": "tsc -p tsconfig.json",
    "dev": "tsx watch src/index.ts",
    "start": "node dist/index.js",
    "start:http": "node dist/index.js --transport=http --port=3001",
    "dev:http": "tsx watch src/index.ts --transport=http --port=3001",
    "lint": "echo 'Linting disabled for demo dev-tools package' && exit 0",
    "typecheck": "tsc --noEmit",
    "clean": "rm -rf dist",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage"
  },
  "dependencies": {
    "@mcp-demo/core": "workspace:*",
    "@modelcontextprotocol/sdk": "^1.0.0",
    "zod": "^3.22.4",
    "prettier": "^3.2.4",
    "eslint": "^8.56.0",
    "@typescript-eslint/parser": "^6.19.0",
    "@typescript-eslint/eslint-plugin": "^6.19.0",
    "execa": "^8.0.1",
    "glob": "^10.3.10",
    "express": "^4.19.2",
    "cors": "^2.8.5"
  },
  "devDependencies": {
    "@types/eslint": "^8.56.0",
    "@types/node": "^20.11.0",
    "@types/express": "^4.17.21",
    "@types/cors": "^2.8.17",
    "tsx": "^4.7.0",
    "typescript": "^5.3.3",
    "vitest": "^3.2.4",
    "@mcp-demo/test-utils": "workspace:*"
  }
}