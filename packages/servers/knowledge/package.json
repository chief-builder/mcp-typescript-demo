{
  "name": "@mcp-demo/knowledge-server",
  "version": "1.0.0",
  "description": "MCP Knowledge Base Server - document storage and retrieval",
  "main": "dist/index.js",
  "bin": {
    "knowledge-server": "dist/index.js"
  },
  "type": "module",
  "scripts": {
    "build": "tsc",
    "start": "node dist/index.js",
    "start:http": "node dist/index.js --transport=http --port=3004",
    "dev": "tsx watch src/index.ts",
    "dev:http": "tsx watch src/index.ts --transport=http --port=3004",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.24.3",
    "@mcp-demo/core": "workspace:*",
    "zod": "^3.25.0",
    "fuse.js": "^7.0.0",
    "marked": "^12.0.2",
    "express": "^4.19.2",
    "cors": "^2.8.5"
  },
  "devDependencies": {
    "@types/marked": "^6.0.0",
    "@types/express": "^4.17.21",
    "@types/cors": "^2.8.17",
    "@mcp-demo/test-utils": "workspace:*",
    "@vitest/coverage-v8": "^3.2.4",
    "tsx": "^4.16.5",
    "typescript": "^5.5.4",
    "vitest": "^3.2.4"
  }
}